#ifndef REMOTE_CONTROLLER_H_
#define REMOTE_CONTROLLER_H_

struct rc_info_t
{
  /* rocker channel information */
  int16_t ch1;
  int16_t ch2;
  int16_t ch3;
  int16_t ch4;
  int16_t ch5;

  /* left and right lever information */
  uint8_t sw1;
  uint8_t sw2;
  int16_t mouse_x;
  int16_t mouse_y;
  int16_t mouse_z;
  int16_t mouse_press_l;
  int16_t mouse_press_r;
  int16_t key_ ;

};

#endif /* REMOTE_CONTROLLER_H_ */
